<p style="color: green"><%= notice %></p>

<h1>Menu Adega</h1>

<div id="products">
  
  <table class="striped" style="border-collapse: collapse !important;">
    <thead>
      <td>Nome</td>
      <td></td>
      <td></td>
      <td>Preço</td>
      <% if 1==1 || params[:admin].present? %>
        <td>Ações</td>
      <% end %>
    </thead>
    <tbody>
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<% if 1==1 || params[:admin].present? %>
  <%= link_to "New product", new_product_path %>
<% end %>

<style>
    table {
        width: 600px;
        border-collapse: collapse;
    }

    tr {
        border-bottom: 1pt solid black !important;
    }
</style>